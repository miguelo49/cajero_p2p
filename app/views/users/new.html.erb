<%= turbo_frame_tag "modal" do %>
  <div class="bg-white shadow rounded-lg p-4">
    <h2 class="text-xl font-semibold mb-4">Datos del usuario</h2>
    
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="mb-4">
        <%= f.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :bank_account, "Cuenta bancaria", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :bank_account, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :address, "Dirección", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      
      <%= f.submit "Guardar", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>