<div class="bg-gradient-to-r from-blue-100 via-blue-200 to-blue-300 min-h-screen flex items-center justify-center p-4">
  <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-blue-600">Nueva oferta</h2>
    <%= form_with(model: @exchange, local: true) do |f| %>
      <div class="mb-6">
        <%= f.label :amount, "Monto", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :amount, step: 0.01, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-gray-400" %>
      </div>

      <!-- Campo: Tipo de intercambio -->
      <div class="mb-6">
        <%= f.label :exchange_type, "Tipo de intercambio", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :exchange_type, options_for_select([["Efectivo a virtual", "cash_to_virtual"], ["Virtual a efectivo", "virtual_to_cash"]]), {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
      </div>

      <!-- Campo: Dirección -->
      <div class="mb-6">
        <%= f.label :address, "Dirección", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :address, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-gray-400" %>
      </div>

      <!-- Botón de envío -->
      <div class="text-center">
        <%= f.submit "Crear oferta", class: "w-full bg-purple-600 text-white py-2 px-4 rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>